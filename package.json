{
  "name": "@chasenocap/context-aggregator",
  "version": "1.0.0",
  "description": "Intelligent context management utilities for the metaGOTHIC framework",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CLAUDE.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "context",
    "aggregation",
    "analysis",
    "optimization",
    "metaGOTHIC",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChaseNoCap/context-aggregator.git"
  },
  "bugs": {
    "url": "https://github.com/ChaseNoCap/context-aggregator/issues"
  },
  "homepage": "https://github.com/ChaseNoCap/context-aggregator#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@chasenocap/cache": "^0.1.0",
    "@chasenocap/di-framework": "^1.0.0",
    "@chasenocap/file-system": "^0.1.0",
    "@chasenocap/logger": "^1.0.0",
    "glob": "^10.3.10",
    "inversify": "^6.0.2",
    "js-yaml": "^4.1.0",
    "minimatch": "^9.0.3",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@chasenocap/test-helpers": "^0.1.0",
    "@chasenocap/test-mocks": "^0.1.1",
    "@eslint/js": "^9.27.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "globals": "^16.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "tier": "shared",
  "unifiedDependencies": {
    "tier": "shared",
    "strategy": "batch-5min",
    "localDevelopment": true
  }
}